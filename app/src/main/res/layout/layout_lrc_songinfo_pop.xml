<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/songinfoPopLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:clickable="true"
    android:orientation="vertical">


    <com.zlm.hp.widget.PlayListBGRelativeLayout
        android:id="@+id/pop_songinfo_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clickable="true">

        <RelativeLayout
            android:id="@+id/songinfotitlelayout"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|center"
                android:singleLine="true"
                android:text="歌曲信息"
                android:textColor="#fff"
                android:textSize="15dp" />

        </RelativeLayout>

        <View
            android:id="@+id/songinfoline"
            android:layout_width="wrap_content"
            android:layout_height="0.1dip"
            android:layout_below="@+id/songinfotitlelayout"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#50ffffff"></View>

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/songinfoline"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginLeft="15dp"
                        android:singleLine="true"
                        android:text="歌手："
                        android:textColor="#fff"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/pop_singerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginLeft="15dp"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="歌手名称"
                        android:textColor="#fff"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginLeft="15dp"
                        android:singleLine="true"
                        android:text="格式："
                        android:textColor="#fff"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/pop_fileext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginLeft="15dp"
                        android:singleLine="true"
                        android:text="mp3"
                        android:textColor="#fff"
                        android:textSize="15dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginLeft="15dp"
                        android:singleLine="true"
                        android:text="时长："
                        android:textColor="#fff"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/pop_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginLeft="15dp"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="00:00"
                        android:textColor="#fff"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginLeft="15dp"
                        android:singleLine="true"
                        android:text="大小："
                        android:textColor="#fff"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/pop_filesize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginLeft="15dp"
                        android:singleLine="true"
                        android:text="0.00MB"
                        android:textColor="#fff"
                        android:textSize="15dp" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/songclline"
            android:layout_width="wrap_content"
            android:layout_height="0.1dip"
            android:layout_below="@+id/info"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#50ffffff"></View>

        <LinearLayout
            android:id="@+id/songcalcel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lrc_pop_item_height"
            android:layout_below="@+id/songclline"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|center_horizontal"
                android:text="取消"
                android:textColor="#fff"
                android:textSize="13dp"></TextView>
        </LinearLayout>

    </com.zlm.hp.widget.PlayListBGRelativeLayout>

</RelativeLayout>

